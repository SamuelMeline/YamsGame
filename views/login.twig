{% extends 'layout.twig' %}

{% block content %}
  <div class="auth-container">
    <h1 class="auth-title">Connexion</h1>
    {% if error %}
      <p class="auth-error">{{ error }}</p>
    {% endif %}
    <form class="auth-form" action="/login" method="post">
      <input class="auth-input" type="text" name="username" placeholder="Nom d'utilisateur" required>
      <input class="auth-input" type="password" name="password" placeholder="Mot de passe" required>
      <button class="auth-button" type="submit">Se connecter</button>
    </form>
    <p class="auth-info">Pas encore inscrit ? <a href="/register">Inscrivez-vous ici</a></p>
  </div>
{% endblock %}
